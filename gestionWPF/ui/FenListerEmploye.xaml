        <Label Grid.Row="0" FontSize="20" FontWeight="Bold" >Liste des Employés</Label>

        <DataGrid Name="dgEmploye" Grid.Row="1" Height="300">
            <DataGrid.Columns>
                <!--DataGridTextColumn x:Name="dgCode" Header="Code" />
                <DataGridTextColumn x:Name="dgNom" Header="Nom Complet" />
                <DataGridTextColumn x:Name="dgSalaire" Header="Salaire" />
                <DataGridTextColumn x:Name="dgBonus" Header="Bonus" /-->
